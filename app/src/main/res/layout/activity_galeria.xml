<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bgblue"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/videos" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/recursos"
        android:id="@+id/video2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Português - Recursos Argumentativos - ENEM | 01 Dia"
        android:padding="10dp"
        android:fontFamily="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/tips"
        android:id="@+id/video1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 dicas para fazer uma ótima redação dissertativa-argumentativa"
        android:padding="10dp"
        android:fontFamily="bold"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textColor="#000"
        />



</LinearLayout>

</ScrollView>