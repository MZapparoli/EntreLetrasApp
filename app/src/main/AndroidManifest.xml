<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.entreletras">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="br.com.entreletras.Main.TelaPrincipal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.entreletras.Main.AnaliseTema"
                  android:logo="@drawable/ic_analise"/>

        <activity android:name="br.com.entreletras.Main.EstruturaTextual" />
        <activity android:name="br.com.entreletras.Main.PlanoRedacao" />
        <activity android:name="br.com.entreletras.Main.ArqParagrafo" />
        <activity android:name="br.com.entreletras.Main.RecArgumentativos" />
        <activity android:name="br.com.entreletras.Main.ArqTexto" />
        <activity android:name="br.com.entreletras.Main.ErrosComuns" />
        <activity
            android:name="br.com.entreletras.Main.Dicas"
            android:icon="@drawable/ic_dicas"
            android:label="Dicas"></activity>
        <activity android:name="br.com.entreletras.Main.Galeria" />
    </application>

</manifest>